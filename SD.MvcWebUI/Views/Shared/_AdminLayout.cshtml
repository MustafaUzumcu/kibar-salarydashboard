<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Salary Dashboard</title>

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @* TODO Bundle CSS *@

    <link href="@Url.Content("~/lib/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="@Url.Content("~/lib/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="@Url.Content("~/lib/admin-lte/plugins/ionicons/css/ionicons.min.css")" rel="stylesheet" />
    <!-- Theme style -->
    <link href="@Url.Content("~/lib/admin-lte/css/AdminLTE.min.css")" rel="stylesheet" />
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
    page. However, you can choose any other skin. Make sure you
    apply the skin class to the body tag so the changes take effect. -->
    <link href="@Url.Content("~/lib/admin-lte/css/skins/skin-blue.min.css")" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    <script src="@Url.Content("~/js/AdminLayout.js")"></script>
</head>

<body class="hold-transition skin-blue sidebar-mini">

    <div class="wrapper">

        <!-- Main Header -->
        <header class="main-header">

            <!-- Logo -->
            <a href="@Url.Action("Index", "Admin" )" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini">SD</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg">Salary Dashboard</span>
            </a>

            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account Menu -->
                        @await Component.InvokeAsync("SideBarUserArea")
                        <!-- # User Account Menu -->
                    </ul>
                </div>
            </nav>
        </header>

        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">

            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">

                <!-- Sidebar Menu -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">MENÜ</li>
                    <!-- Optionally, you can add icons to the links -->
                    <li class="active"><a href="#"><i class="fa fa-upload"></i> <span>Politika Belirle</span></a></li>
                    <li><a href="#"><i class="fa fa-line-chart"></i> <span>Piyasa Belirle</span></a></li>
                    <li><a href="@Url.Action("Index", "SystemParameters")"><i class="fa fa-cog"></i> <span>Sistem Parametreleri</span></a></li>
                    <li><a href="#"><i class="fa fa-table"></i> <span>Artış Matrisi</span></a></li>
                    <li><a href="#"><i class="fa fa-bar-chart"></i> <span>Raporlar</span></a></li>
                    <li><a href="@Url.Action("Index", "Role" )"><i class="fa fa-id-card-o"></i> <span>Rol Yönetimi</span></a></li>
                    <li><a href="@Url.Action("Index", "User")"><i class="fa fa-user"></i> <span>Kullanıcı Yönetimi</span></a></li>
                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Alerts -->
            @await Component.InvokeAsync("AlertMessage")
            <!--### Alerts -->
            <!-- Content Header (Page header) -->
            <section class="content-header" style="padding-top: 10px; padding-bottom: 10px;">
                <h1>
                    <a id="backButton" onclick="onClickBackButton()" class="btn btn-sm btn-default">
                        <i class="fa fa-chevron-left"></i> Geri
                    </a>
                    @ViewData["Title"]
                    <small>Optional description</small>
                </h1>
                <ol class="breadcrumb" style="padding-top: 0px; padding-bottom: 0">
                    @*
                    <li><a href="#"><i class="fa fa-dashboard"></i> Salary Dashboard</a></li>*@
                    <li><a href="#">Ana sayfa</a></li>
                    <li class="active"><i class="fa fa-upload"></i> Çalışan Verilerini Yükle</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content container-fluid" style="padding-top: 0px">

                <!-- Scripts -->
                @* TODO Bundle JS *@
                <script src="@Url.Content("/lib/jquery/jquery.min.js")"></script>
                <script src="@Url.Content("/lib/bootstrap/js/bootstrap.min.js")"></script>
                <script src="@Url.Content("/lib/admin-lte/js/adminlte.min.js")"></script>
                <script src="@Url.Content("/lib/admin-lte/js/demo.js")"></script>
                <script src="@Url.Content("/lib/admin-lte/plugins/fastclick/fastclick.js")"></script>
                <script src="@Url.Content("/lib/admin-lte/plugins/jquery-slimscroll/jquery.slimscroll.min.js")"></script>



                <!--------------------------| Your Page Content Here |-------------------------->
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="pull-right hidden-xs">
                <!-- right content -->
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; @DateTime.Now.Year <a href="#">Kibar Holding</a>.</strong> All rights reserved.
        </footer>

    </div>
    <!-- ./wrapper -->

    <script>
        $(document).ready(function () {
            // if history previous exist
            if (document.referrer !== "") {
                $("#backButton").show();
            } else {
                $("#backButton").hide();
            }
        });
    </script>

</body>
</html>
