@model UserViewModel

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Kullanıcı Listesi</h3>

                <div class="box-tools">
                    <a asp-action="Create" asp-controller="User" class="btn btn-block btn-default">
                        <i class="fa fa-plus"></i> Yeni Kullanıcı Ekle
                    </a>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>Email</th>
                        <th>Rolleri</th>
                        <th></th>
                        <th></th>
                    </tr>
                    @if (Model.Users.Count == 0)
                    {
                        <tr>
                            <th colspan="4" class="text-center">Kayıt yok</th>
                        </tr>
                    }
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>
                                @{
                                    var roleNames = string.Join(",", user.RoleNames);
                                    @: @roleNames
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="User" asp-route-id="@user.Id" class="btn btn-info pull-right">
                                    <i class="fa fa-pencil"></i> Düzenle
                                </a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" class="btn btn-danger">
                                    <i class="fa fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>


