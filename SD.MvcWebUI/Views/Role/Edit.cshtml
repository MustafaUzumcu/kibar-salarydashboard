@model SD.MvcWebUI.Entities.CustomIdentityRole

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<div class="box ">
    @*<div class="box-header with-border">
            <h3 class="box-title">Rol Ekle</h3>
        </div>*@
    <!-- /.box-header -->
    <!-- form start -->
    <form asp-action="Edit" asp-controller="Role" role="form">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            @await Component.InvokeAsync("FormValidationErrorMessages", ViewData.ModelState)
        }

        <div class="box-body">
            <div class="form-group">
                <label asp-for="Name">Rol Adı</label>
                <input asp-for="Name" class="form-control" placeholder="Rol Adı">
            </div>
        </div>
        <!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
<!-- /.box -->
