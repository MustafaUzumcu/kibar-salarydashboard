@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "_EmptyLayout";
}

<div class="register-box">
    <div class="register-logo">
        <a href="#">Salary Dashboard</a>
    </div>

    <div class="register-box-body">
        <h4 class="login-box-msg">Şifremi Unuttum</h4>

        <form action="@Url.Action("ForgotPassword", "Account")" method="post">
            @Html.AntiForgeryToken()

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                @await Component.InvokeAsync("FormValidationErrorMessages", ViewData.ModelState)
            }
            <div class="form-group has-feedback">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <div class="text-center bg-warning" style="padding: 5px">
                    <img src="@Url.Action("GetResetPasswordCaptchaCode", "Account")" />
                </div>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="SecurityCode" class="form-control" placeholder="Güvenlik Kodu">
                <span class="fa fa-key form-control-feedback"></span>
            </div>
            <div class="row">
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Gönder</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

    </div>
    <!-- /.form-box -->
</div>
<!-- /.register-box -->