@using System.Threading.Tasks
@using Microsoft.AspNetCore.Mvc.ModelBinding

@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_EmptyLayout";
}

<link href="@Url.Content("~/lib/admin-lte/plugins/iCheck/square/blue.css")" rel="stylesheet" />

<div class="login-box">
    <div class="login-logo">
        <a href="#">Salary Dashboard</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <h4 class="login-box-msg">Giriş Yap</h4>

        <form action="@Url.Action("Login", "Account")" method="post">
            @Html.AntiForgeryToken()

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                @(await Component.InvokeAsync("ModelErrorMessages", ViewData.ModelState))
            }
            <div class="form-group has-feedback">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Password" class="form-control" placeholder="Şifre">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input asp-for="RememberMe"> Beni Hatırla
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Giriş yap</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <a href="@Url.Action("ForgotPassword", "Account")">Şifremi Unuttum</a><br>
        <a href="@Url.Action("Register", "Account")" class="text-center">Kayıt Ol</a>

    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<script src="@Url.Content("~/lib/admin-lte/plugins/iCheck/icheck.min.js")"></script>

<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' /* optional */
        });
    });
</script>